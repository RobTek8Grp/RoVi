<launch>
	<node name="point_cloud_assembler" pkg="point_cloud_assembler" type="point_cloud_assembler_node" output="screen">
		<param name="input_topic" value="/robot_rx60b/carmine_pose" />
		<param name="output_topic" value="assembled_point_cloud" />
		
		<!-- Cut-Off filter parameters -->
		<param name="cutoff/x_min" value="-0.2" />		<!--	[m]		-->
		<param name="cutoff/x_max" value="0.2" />		<!--	[m]		-->
		<param name="cutoff/y_min" value="-0.2" />		<!--	[m]		-->
		<param name="cutoff/y_max" value="0.2" />		<!--	[m]		-->
		<param name="cutoff/z_min" value="0.85" />		<!--	[m]		-->
		<param name="cutoff/z_max" value="0.86" />		<!--	[m]		-->
		
		<!-- Voxel filter (before stitching) -->
		<param name="voxel/msg/x" value="0.003" />		<!--	[m]		-->
		<param name="voxel/msg/y" value="0.003" />		<!--	[m]		-->
		<param name="voxel/msg/z" value="0.003" />		<!--	[m]		-->
		
		<!-- Voxel filter (after stitching) -->
		<param name="voxel/stitch/x" value="0.005" />	<!--	[m]		-->
		<param name="voxel/stitch/y" value="0.005" />	<!--	[m]		-->
		<param name="voxel/stitch/z" value="0.005" />	<!--	[m]		-->
		
		<!-- Stitching -->
		<param name="stitching/epsilon" value="1e-6" />							<!--	[m]		-->
		<param name="stitching/max_correspondance_distance" value="0.006" />	<!--	[m]		-->
	</node>
</launch>